<!DOCTYPE html>
<html lang="en">

<head>
    <title>AMIRisk Admin</title>
</head>

<body>
    <%- include('partials/topbar')%>
        <h1>Search Results</h1><br><br>
        <form method="POST" action="/search" class="srchbar">
            <label for="srchclients">Select client: </label><br>
            <select name="srchclients" id="srchclients">
            <% for(var i=0; i < dropdownData.length; i++) { %>
                <option>
                    <%= dropdownData[i].client_name %>
                </option>
              <%}%>
            </select>
            <button type="submit" class="srchbutton">Search</button>
        </form>
        <style>
            .srchbar {
                display: flex;
                flex-direction: row;
                margin-bottom: 50px;
            }
            
            .srchbutton {
                background-color: rgb(62, 62, 145);
                color: white;
            }
            
            #srch1 {
                margin-right: 5px;
            }
        </style>
        <table border="1">
            <tr>
                <th>Client Name</th>
                <th>Project</th>
                <th>Valuation Date</th>
            </tr>

            <%
         if(projectData.length!=0){
        var i=1;
        projectData.forEach(function(data){
        %>
                <tr>

                    <td>
                        <%=data.client_name %>
                    </td>
                    <td>
                        <%=data.project %>
                    </td>
                    <td>
                        <%=data.Valuation_date %>
                    </td>

                </tr>
                <%  i++; }) %>
                    <% } else{ %>
                        <tr>
                            <td colspan="7">No Data Found</td>
                        </tr>
                        <% } %>
        </table>
</body>

</html>